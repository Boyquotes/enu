{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {   
            "command": "nimble",
            "args": ["build", "--verbose"],
            "options": {
                "cwd": "${workspaceRoot}",
                "env": {
                    "GODOT_BIN": "/Applications/Godot.app/Contents/MacOS/Godot",
                    "SAVED_FILE": "${relativeFile}"
                }
            },
            
            "type": "shell",
            "label": "nim-build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}